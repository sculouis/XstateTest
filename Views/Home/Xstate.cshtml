@{
    ViewData["Title"] = "Xstate 測試";
}

<div id="xstateTest">
    <h1>@ViewData["Title"]-{{current}}</h1>
    <search title-name="查詢區" v-bind:show-body="showSearch" v-bind:current="current"></search>
    <query-result title-name="結果區" v-bind:show-body="showResult" v-bind:current="current"></query-result>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/testxstate.js"></script>
}

<template id="search">
    <div class="panel panel-info" v-cloak>
        <div class="panel-heading data">
            {{titleName}}
        </div>
        <div class="panel-body" v-show="showBody">
            <input-text title-name="報價單號"></input-text>
            <button v-on:click="onFetch()" class="btn btn-primary">切換</button>
        </div>
    </div>
</template>

<template id="result">
    <div class="panel panel-info" v-cloak>
        <div class="panel-heading data">
            {{titleName}}
        </div>
        <div class="panel-body" v-show="showBody">
            <button v-on:click="onFetch()" class="btn btn-primary">重新查詢</button>
        </div>
    </div>
</template>